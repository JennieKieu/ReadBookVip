<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="ContentDescription, Autofill, LabelFor">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_10">

            <!-- Book Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:text="@string/label_name"/>

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/define_dimen_12"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp"/>

            <!-- Cover Image Upload -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="Cover Image"/>

            <Button
                android:id="@+id/btn_select_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:text="Select image from device"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp"
                android:textAllCaps="false"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_cover_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:text="No image selected"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"
                android:paddingStart="@dimen/define_dimen_4"
                android:paddingEnd="@dimen/define_dimen_4"/>

            <ImageView
                android:id="@+id/img_cover_preview"
                android:layout_width="@dimen/define_dimen_150"
                android:layout_height="@dimen/define_dimen_200"
                android:layout_marginTop="@dimen/define_dimen_8"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:visibility="gone"/>

            <!-- Banner Image Upload -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="@string/label_banner"/>

            <Button
                android:id="@+id/btn_select_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:text="Select banner from device"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp"
                android:textAllCaps="false"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_banner_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:text="No banner selected"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"
                android:paddingStart="@dimen/define_dimen_4"
                android:paddingEnd="@dimen/define_dimen_4"/>

            <ImageView
                android:id="@+id/img_banner_preview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/define_dimen_8"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:visibility="gone"/>

            <!-- Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="@string/label_book_category"/>

            <Spinner
                android:id="@+id/spn_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@color/transparent"
                android:scrollbars="none" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="Book Description"/>

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="start|top"
                android:padding="@dimen/define_dimen_12"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp"
                android:hint="Enter book description..."/>

            <!-- Tags -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="Tags"/>

            <EditText
                android:id="@+id/edt_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/define_dimen_12"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp"
                android:hint="Separate by comma. E.g: romance, school"/>

            <!-- Status -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="Status"/>

            <Spinner
                android:id="@+id/spn_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@color/transparent"
                android:scrollbars="none" />

            <!-- Featured Checkbox -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_20"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:padding="@dimen/define_dimen_12">

                <CheckBox
                    android:id="@+id/chb_featured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_book_featured" />
            </RelativeLayout>

            <!-- Chapters Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginTop="@dimen/define_dimen_20"
                android:text="Chapter List"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_chapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/tv_no_chapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="No chapters yet. Click the button below to add."
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13sp"
                android:gravity="center"
                android:padding="@dimen/define_dimen_16"
                android:visibility="visible"/>

            <!-- Add Chapter Button -->
            <Button
                android:id="@+id/btn_add_chapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:text="+ Add New Chapter"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_add_or_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_20"
                android:background="@drawable/bg_main_corner_30"
                android:text="@string/action_add"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />

            <!-- Old PDF URL field - commented out for reference -->
            <!--
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="@string/label_book_link_url"/>

            <EditText
                android:id="@+id/edt_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_4"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/define_dimen_12"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp" />
            -->

            <!-- Old manage chapters button - replaced with inline chapters -->
            <!--
            <Button
                android:id="@+id/btn_manage_chapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_20"
                android:background="@drawable/bg_white_corner_6_border_gray"
                android:text="Manage Chapters"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_14sp" />
            -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
