<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_6_border_gray"
    android:layout_marginBottom="@dimen/define_dimen_8"
    android:orientation="horizontal"
    android:padding="@dimen/define_dimen_12"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter 1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_chapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_4"
            android:text="Chapter Title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_13sp"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="@dimen/define_dimen_32"
        android:layout_height="@dimen/define_dimen_32"
        android:layout_marginStart="@dimen/define_dimen_8"
        android:src="@drawable/ic_edit"
        android:padding="@dimen/define_dimen_6"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit chapter" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/define_dimen_32"
        android:layout_height="@dimen/define_dimen_32"
        android:layout_marginStart="@dimen/define_dimen_4"
        android:src="@drawable/ic_delete"
        android:padding="@dimen/define_dimen_6"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete chapter" />

</LinearLayout>
